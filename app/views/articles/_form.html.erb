<div class="container">
  <%= form_with model: article, class: "card p-4" do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :content, class: "form-label" %>
    <div class="form-control ace_editor ace-solarized-light">
    <%= f.text_area :content, class: "ace_text-input" %>
    </div>

  </div>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
