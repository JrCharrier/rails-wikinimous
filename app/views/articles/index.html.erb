<%= render "navbar" %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% @articles.each do |article| %>
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to article.title, article_path(article), class: "text-decoration-none text-dark" %>
            </h5>
            <p class="card-text"><%= truncate(article.content, length: 150) %></p>
            <a href="<%= article_path(article) %>" class="btn btn-primary">Lire la suite</a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
